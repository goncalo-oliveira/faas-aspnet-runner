<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>OpenFaaS</RootNamespace>
    <AssemblyName>openfaas.runner.newtonsoftjson</AssemblyName>
    <PackageId>OpenFaaS.Runner.NewtonsoftJson</PackageId>
    <Version>2.0</Version>
    <Authors>Goncalo Oliveira</Authors>
    <Description>OpenFaaS ASPNET Function Runner Newtonsoft Json Extensions</Description>
    <RepositoryUrl>https://github.com/goncalo-oliveira/faas-aspnet-runner</RepositoryUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>faactory.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\abstractions\abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../faactory.png" Pack="true" PackagePath="/"/>
    <None Include="../../README.md" Pack="true" PackagePath="/"/>
  </ItemGroup>

</Project>
